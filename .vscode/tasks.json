{
    "version": "2.0.0",
    "command": "mos",
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "args": [
                "build",
                "--platform",
                "esp8266",
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "group": "build",
            "args": [
                "flash",
                "--esp-flash-params",
                "qio,8m,40m" // Flash with QIO instead of DIO, with 1Mbyte flash. Remove this line if using default
            ],
            "problemMatcher": []
        },
        {
            "label": "console",
            "type": "shell",
            "group": "build",
            "args": ["console"],
            "problemMatcher": []
        }
    ]
}